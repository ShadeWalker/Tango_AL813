<ScrollView android:id="@+id/ScrollView01" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:orientation="vertical"
            xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="25dp"
    android:paddingRight="25dp"
    android:orientation="vertical" 
    >
    
    <TextView 
        android:id="@+id/wifi_wizard_dialog_top_message"
        android:text="@string/wifi_wfc_dialog_top_wording"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
       
    <ImageView 
        android:id="@+id/wifi_wizard_dialog_image"
        android:src="@drawable/mtk_wfc_info_indication_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_wizard_dialog_top_message"
        android:layout_centerInParent="true"/>
       
    <TextView 
        android:id="@+id/wifi_wizard_dialog_bottom_message"
        android:text="@string/wifi_wfc_dialog_bottom_wording"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_wizard_dialog_image"/>
        
     <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wifi_wizard_dialog_bottom_message"
        android:text="@string/offer_dont_display"/>
 </RelativeLayout>
 
</ScrollView>